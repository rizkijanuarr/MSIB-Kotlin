<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SecondScreen">

    <ImageView
        android:id="@+id/imgscreen2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/screen1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <View
            android:id="@+id/viewscreen2"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_gravity="bottom"
            android:background="@drawable/style_onboarding2"
            android:backgroundTint="#F6F6F6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="0dp"></View>

        <TextView
            android:id="@+id/texttitlesc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="Selamat Datang Di Chili Care"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"></TextView>

        <TextView
            android:id="@+id/textdescsc1"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chilli Care media untuk kita semua belajar \n menanam cabai dari pemula sampai dengan menghasilkan Cabai yang berkualitas."
            android:textAlignment="center"
            android:textColor="@color/PrimaryText"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@+id/viewtv"
            app:layout_constraintTop_toBottomOf="@+id/texttitlesc2"
            android:layout_marginTop="30dp">

        </TextView>

        <Button
            android:id="@+id/loginmasuk"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/buttonloginreg"
            android:text="Masuk"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/textdescsc1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/viewscreen2" />


        <Button
            android:id="@+id/buttondaftar1"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:background="@drawable/custmloginbtn"
            android:text="Daftar Sekarang"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/PrimaryBrand"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/loginmasuk"
            app:layout_constraintBottom_toBottomOf="@+id/viewtv"
            app:layout_constraintStart_toStartOf="@+id/viewtv"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>