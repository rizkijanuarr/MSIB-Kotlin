<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.Error404Fragment">


    <ImageView
        android:id="@+id/imgError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:src="@drawable/error_message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textMaaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="20dp"
        android:text="Ooops... Maaf"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgError" />

    <TextView
        android:id="@+id/textMessageError"
        android:layout_width="310dp"
        android:layout_height="39dp"
        android:layout_marginLeft="48dp"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:text="Sepertinya ada kendala pada halaman yang\n Anda tuju ðŸ˜”"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMaaf" />

    <Button
        android:id="@+id/btnBackToHomepage"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/buttonloginreg"
        android:fontFamily="@font/plusjakartasans_bold_700"
        android:text="Kembali ke Beranda"
        android:textAllCaps="false"
        android:textColor="@color/NeutralText"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/textMessageError" />


</androidx.constraintlayout.widget.ConstraintLayout>