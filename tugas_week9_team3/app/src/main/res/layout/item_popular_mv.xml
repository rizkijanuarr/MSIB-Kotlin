<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btnCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:backgroundTint="#ECECEC"
    app:cardCornerRadius="20dp">

    <TextView
        android:id="@+id/titlePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Popular Movie"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/cardMoviePop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginVertical="40dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/posterimage"
            android:layout_width="100dp"
            android:layout_height="180dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/titletv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/posterimage"
            android:text="Judul Poster"
            android:textSize="23sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtRelesedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titletv"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/posterimage"
            android:text="Relase Date: "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/daterilismov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titletv"
            android:layout_toRightOf="@id/txtRelesedate"
            android:textSize="15sp"
            tools:text="20-12-2023" />

        <TextView
            android:id="@+id/textRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRelesedate"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/posterimage"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="8.8" />

        <ImageView
            android:id="@+id/starrateicn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRelesedate"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/textRate"
            android:src="@drawable/icn_star" />

        <TextView
            android:id="@+id/descPopMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textRate"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/posterimage"
            android:ellipsize="end"
            android:maxLines="4"
            android:textStyle="normal"
            tools:text="Lore Ipsum" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/btnmoredetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="21dp"
        android:src="@drawable/icn_moredetails" />

    <TextView
        android:id="@+id/textIcnDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:text="Detail" />

</androidx.cardview.widget.CardView>