<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.GetstartedActivity">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Team 3!!ðŸ‘‹"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/personHaryadi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome"
        android:text="Haryadi Wibowo Rizky Putra"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/personAdnan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personHaryadi"
        android:text="Adnan Aditya Muntahar"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/personNabila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personAdnan"
        android:text="Nabila Maharani"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/personRizki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personNabila"
        android:text="Rizki Januar Irmansyah"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/btnGetstarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:text="Get Started"
        />

</androidx.constraintlayout.widget.ConstraintLayout>