<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/imgPosterTopRated"
            android:layout_width="80dp"
            android:layout_height="120dp" />
        <TextView
            android:id="@+id/tvTittleTopRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/imgPosterTopRated"
            android:text="Title Poster"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/iconbintang"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/tvTittleTopRated"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/imgPosterTopRated"
            android:src="@drawable/baseline_star_24"/>
        <TextView
            android:id="@+id/tvRatingTopRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTittleTopRated"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iconbintang"
            tools:text="7.8"/>
        <TextView
            android:id="@+id/tvOverviewTopRated"
            android:layout_toRightOf="@id/imgPosterTopRated"
            android:text="Overview"
            android:textColor="@color/gray"
            android:layout_below="@+id/tvRatingTopRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/btnView"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="164dp"
            android:layout_toRightOf="@+id/tvTittleTopRated"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="244dp"
            android:layout_toRightOf="@+id/imgPosterTopRated"
            android:layout_below="@+id/btnView"
            android:text="View Details"
            android:textColor="@color/gray"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>