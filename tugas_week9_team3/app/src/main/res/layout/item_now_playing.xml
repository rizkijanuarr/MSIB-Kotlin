<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title Poster"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgPoster"
            />

        <ImageView
            android:id="@+id/iconBintang"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/star"
            app:layout_constraintLeft_toRightOf="@+id/imgPoster"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tvTextRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textColor="@color/gray"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@+id/iconBintang"
            app:layout_constraintTop_toTopOf="@+id/iconBintang"
            app:layout_constraintBottom_toBottomOf="@id/iconBintang"
            />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.8"
            android:textColor="@color/gray"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/tvTextRating"
            app:layout_constraintTop_toTopOf="@id/tvTextRating"
            app:layout_constraintBottom_toBottomOf="@id/tvTextRating"
            />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:textColor="@color/gray"
            app:layout_constraintLeft_toRightOf="@+id/imgPoster"
            app:layout_constraintTop_toBottomOf="@+id/iconBintang"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:paddingRight="148dp"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/tvPopularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.8"
            android:textColor="@color/gray"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/tvTextPopularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popularity"
            android:textColor="@color/gray"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="@+id/tvPopularity"
            app:layout_constraintBottom_toBottomOf="@+id/tvPopularity"
            app:layout_constraintRight_toLeftOf="@+id/tvPopularity"
            />

        <ImageView
            android:id="@+id/iconApi"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/popularity"
            app:layout_constraintTop_toTopOf="@+id/tvTextPopularity"
            app:layout_constraintBottom_toBottomOf="@+id/tvTextPopularity"
            app:layout_constraintRight_toLeftOf="@+id/tvTextPopularity"
            />

        <TextView
            android:id="@+id/tvReleased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Released"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gray"
            app:layout_constraintLeft_toRightOf="@+id/imgPoster"
            app:layout_constraintTop_toTopOf="@+id/tvPopularity"
            app:layout_constraintBottom_toBottomOf="@+id/tvPopularity"
            />


        <ImageView
            android:id="@+id/imgArrowRight"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/arrowright"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvPopularity"
            android:layout_marginRight="39dp"
            android:layout_marginBottom="45dp"
            />


        <TextView
            android:id="@+id/tvTextViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgArrowRight"
            android:layout_marginRight="10dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
